# ===========================================
# ConnecTone 환경변수 설정
# ===========================================

# ===========================================
# 기본 설정
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=ConnecTone
NEXT_PUBLIC_APP_DESCRIPTION=안전하고 신뢰할 수 있는 중고 악기 거래 플랫폼

# ===========================================
# Firebase 설정
# ===========================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com

# ===========================================
# 이메일 서비스 설정
# ===========================================
# SendGrid (권장)
EMAIL_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@connetone.com
FROM_NAME=ConnecTone

# 또는 AWS SES
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# 또는 Nodemailer (SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# ===========================================
# Google Cloud Vision API
# ===========================================
GOOGLE_APPLICATION_CREDENTIALS=./lib/config/firebase-service-account.json
GOOGLE_CLOUD_PROJECT_ID=your_project_id
VISION_API_ENDPOINT=https://vision.googleapis.com/v1/images:annotate

# ===========================================
# AI 서비스 설정
# ===========================================
# Roboflow/YOLOv8 (향후 구현)
ROBOFLOW_API_KEY=your_roboflow_api_key
ROBOFLOW_MODEL_ID=your_model_id
ROBOFLOW_VERSION=1

# ===========================================
# 결제 서비스 설정
# ===========================================
# PG사 API (향후 구현)
PG_API_KEY=your_pg_api_key
PG_SECRET_KEY=your_pg_secret_key
PG_MERCHANT_ID=your_merchant_id

# ===========================================
# 운송 서비스 설정
# ===========================================
# CJ대한통운 API (향후 구현)
CJ_LOGISTICS_API_KEY=your_cj_api_key
CJ_LOGISTICS_CUSTOMER_ID=your_customer_id

# ===========================================
# 분석 및 모니터링
# ===========================================
# Sentry 오류 로깅
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=connetone
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# PostHog (대안)
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ===========================================
# 보안 설정
# ===========================================
# JWT 시크릿 (사용자 인증용)
JWT_SECRET=your_super_secret_jwt_key_here

# 암호화 키 (민감한 데이터 암호화)
ENCRYPTION_KEY=your_32_character_encryption_key

# API 레이트 리미팅
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ===========================================
# CDN 및 이미지 최적화
# ===========================================
# Cloudinary (이미지 CDN)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# 또는 AWS CloudFront
# AWS_CLOUDFRONT_DOMAIN=your_cloudfront_domain.cloudfront.net

# ===========================================
# 데이터베이스 설정 (향후 확장)
# ===========================================
# PostgreSQL (향후 구현)
# DATABASE_URL=postgresql://username:password@localhost:5432/connetone

# Redis (캐싱용)
# REDIS_URL=redis://localhost:6379

# ===========================================
# SNS 간편 로그인 설정
# ===========================================
# 카카오 로그인
NEXT_PUBLIC_KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret

# 네이버 로그인
NEXT_PUBLIC_NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# 구글 로그인
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ===========================================
# 외부 서비스 API
# ===========================================
# AssemblyAI (AI 보컬 분석)
ASSEMBLYAI_API_KEY=your_assemblyai_api_key
NEXT_PUBLIC_ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# 카카오 주소 API
KAKAO_REST_API_KEY=your_kakao_rest_api_key

# 네이버 지도 API
NAVER_MAPS_CLIENT_ID=your_naver_maps_client_id
NAVER_MAPS_CLIENT_SECRET=your_naver_maps_client_secret

# ===========================================
# 개발 환경 전용
# ===========================================
# 개발 모드에서만 사용
DEBUG_MODE=true
MOCK_API_RESPONSES=false
ENABLE_DEV_TOOLS=true

# ===========================================
# 운영 환경 전용
# ===========================================
# 운영 모드에서만 사용
# ENABLE_ANALYTICS=true
# ENABLE_ERROR_REPORTING=true
# ENABLE_PERFORMANCE_MONITORING=true

# ===========================================
# 환경별 설정 가이드
# ===========================================
# 개발환경: NODE_ENV=development
# - 모든 디버그 로그 활성화
# - Mock API 사용 가능
# - 개발자 도구 활성화

# 스테이징환경: NODE_ENV=staging  
# - 제한된 디버그 로그
# - 실제 API 사용
# - 분석 도구 활성화

# 운영환경: NODE_ENV=production
# - 최소 로그만 출력
# - 실제 API 사용
# - 모든 모니터링 활성화