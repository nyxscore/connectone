rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 아바타 이미지 업로드 규칙
    match /avatars/{uid}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
    
    // 기존 상품 이미지 규칙
    match /items/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // AI 라벨링된 이미지 규칙
    match /ai_labeled/{uid}/{itemId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
